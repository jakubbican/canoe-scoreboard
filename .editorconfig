# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# JavaScript, JSX, TypeScript, CSS, JSON files
[*.{js,jsx,ts,tsx,css,json}]
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Python files (if any utility scripts)
[*.py]
indent_style = space
indent_size = 4

# Tab indentation for package files
[{package.json,package-lock.json}]
indent_style = space
indent_size = 2